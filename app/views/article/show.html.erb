<div class="article">
	<div class="article-image">
		<%= image_tag "bg2.jpg" %>
	</div>
	<div class="article-content center">
		<div class="top">
			<%= @article.name %><span id="color">- <%= Games.find(@article.game_id).name %> - <%= @article.created_at.strftime("%d.%m.%Y") %></span>
		</div>
		<div class="article-name">
			<%= @article.articlename %>
		</div>
		<p><%= @article.articlecontent %></p>
	</div>
</div>

<div id="comments">
<%= render "layouts/disqus" %>
</div>